@model ToDo
<form method="post">
	<input type = "text" asp-for = "Title" class = "form-control" palceholder = "Input your task"/>
	<input type = "text" asp-for = "Desc" class = "form-control" palceholder = "Input Desc"/>
	<input type = "date" asp-for = "Deadline" class = "form-control"/>
	<select asp-for = "Status" class = "form-control">
		<option value = "@Status.notStarted">Not Started</option>
		<option value = "@Status.processing">In Progress</option>
		<option value = "@Status.pass">Completed</option>
	</select>
	<input type = "submit" class = "btn bth-warning w-100" value = "Edit"/>
</form>
